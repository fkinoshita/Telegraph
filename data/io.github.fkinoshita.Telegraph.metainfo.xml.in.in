<?xml version="1.0" encoding="UTF-8"?>
  <!-- Copyright 2023 Felipe Kinoshita -->
<component type="desktop">
	<id>@APPID@</id>
  <launchable type="desktop-id">@APPID@.desktop</launchable>
  <name translatable="no">@NAME@</name>
  <developer_name translatable="no">Felipe Kinoshita</developer_name>
  <update_contact>kinofhek@gmail.com</update_contact>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-only</project_license>
  <summary>Write and decode morse</summary>
  <translation type="gettext">io.github.fkinoshita.Telegraph</translation>
	<description>
	  <p>
	    Telegraph is a simple Morse translator, start typing your message to see
	    the resulting Morse code and vice versa.
	  </p>
	</description>
  <requires>
    <display_length compare="ge">350</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <url type="homepage">https://github.com/fkinoshita/Telegraph</url>
  <url type="bugtracker">https://github.com/fkinoshita/Telegraph/issues</url>
  <url type="donation">https://ko-fi.com/fkinoshita</url>
  <screenshots>
    <screenshot type="default">
      <image>
        https://raw.githubusercontent.com/fkinoshita/Telegraph/main/data/screenshots/telegraph.png
      </image>
      <caption>Main window</caption>
    </screenshot>
    <screenshot>
      <image>
        https://raw.githubusercontent.com/fkinoshita/Telegraph/main/data/screenshots/dark.png
      </image>
    </screenshot>
  </screenshots>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="0.1.6" date="2023-05-25">
      <description>
        <ul>
          <li>Improve undershoot styles (daudix-UFO)</li>
          <li>Add Russian translations (daudix-UFO)</li>
          <li>Update Turkish translations (sabriunal)</li>
        </ul>
      </description>
    </release>
    <release version="0.1.5" date="2023-04-24">
      <description>
        <p>This is the first release after Telegraph entered GNOME Circle!</p>
        <ul>
          <li>Start text views with the "SOS" text, this makes it easier to understand that users should edit the text views.</li>
          <li>Add Brazilian Portuguese translations</li>
          <li>Add Turkish translations (ernince)</li>
        </ul>
      </description>
    </release>
    <release version="0.1.4" date="2023-04-07">
      <description>
        <ul>
          <li>Remember and restore window size</li>
          <li>Add Italian translations (albanobattistella)</li>
        </ul>
      </description>
    </release>
    <release version="0.1.3" date="2023-04-01">
      <description>
        <ul>
          <li>Ctrl+W now closes the window</li>
          <li>Add French translations (Amerey)</li>
          <li>Add Czech translations (rene-coty)</li>
        </ul>
      </description>
    </release>
    <release version="0.1.2" date="2023-03-31">
      <description>
        <ul>
          <li>Small user interface improvements</li>
          <li>Use nicer colors for GNOME Software carousel tile</li>
          <li>Add Dutch translations (Heimen Stoffels)</li>
        </ul>
      </description>
    </release>
    <release version="0.1.1" date="2023-03-29">
      <description>
        <ul>
          <li>Remove explicit modes, you can now start typing on either text views (axtloss)</li>
          <li>Layout is now responsive (gregorni)</li>
          <li>Support for new characters (gregorni)</li>
          <li>Small quality-of-life improvements</li>
        </ul>
      </description>
    </release>
    <release version="0.1.0" date="2023-03-24">
      <description>
        <p>First release of Telegraph</p>
      </description>
    </release>
  </releases>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>
  <custom>
    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
    <value key="GnomeSoftware::key-colors">[(76, 113, 160), (100, 149, 211)]</value>
  </custom>
</component>
