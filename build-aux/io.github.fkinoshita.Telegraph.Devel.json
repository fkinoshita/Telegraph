{
    "id" : "io.github.fkinoshita.Telegraph.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "telegraph",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "telegraph",
            "builddir" : true,
            "buildsystem" : "meson",
			"config-opts" : [
				"-Dprofile=development"
			],
            "sources" : [
                {
                    "type" : "dir",
					"path" : ".."
                }
            ]
        }
    ]
}
